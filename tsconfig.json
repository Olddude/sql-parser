{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "mssql",
      "cors",
      "reflect-metadata"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "**/*.json"
  ]
}
